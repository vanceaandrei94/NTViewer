<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NTViewer.AlertDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/problem_title"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/problem_report" />

        <TextView
            android:id="@+id/problem_reported_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/NTViewer.AlertDialog.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/problem_type" />

            <TextView
                android:id="@+id/problem_type"
                style="@style/NTViewer.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/NTViewer.AlertDialog.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/problem_priority" />

            <TextView
                android:id="@+id/problem_priority"
                style="@style/NTViewer.AlertDialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            style="@style/NTViewer.AlertDialog.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/problem_details_label" />

        <TextView
            android:id="@+id/problem_details"
            style="@style/NTViewer.AlertDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="12" />

    </LinearLayout>

    <View
        android:id="@+id/view_delimiter"
        style="@style/NTViewer.Delimiter"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/buttons_container" />

    <LinearLayout
        android:id="@id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_btn"
            style="@style/NTViewer.ButtonBase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:text="@string/btn_cancel" />


        <Button
            android:id="@+id/resolve_btn"
            style="@style/NTViewer.ButtonBase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight=".5"
            android:text="@string/btn_resolve" />
    </LinearLayout>
</LinearLayout>
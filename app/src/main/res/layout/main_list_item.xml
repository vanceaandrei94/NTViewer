<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/list_padding_end"
    android:paddingStart="@dimen/list_padding_start">

    <LinearLayout
        android:id="@+id/item_container"
        style="@style/TwoLineListItem">

        <TextView
            android:id="@+id/site_name"
            style="@style/FirstListItem"
            android:text="list_location_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/site_badge"
                style="@style/Badge"
                android:background="@drawable/badge_good" />

            <TextView
                android:id="@+id/site_quality"
                style="@style/SecondListItem"
                android:text="quality" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>